<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <View
        android:id="@+id/view_head_main"
        android:layout_width="411dp"
        android:layout_height="215dp"
        android:background="@color/red"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="F1 Simulator"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_dry_clean"
        android:foreground="@drawable/ic_f1_logo"
        app:layout_constraintEnd_toEndOf="@+id/view_head_main"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnlist"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="@color/light_black"
        android:shadowColor="@color/white"
        android:textStyle="bold"
        android:text="Get the last circuit"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_racing_flag"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncompare"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_weight_balance"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:shadowColor="@color/black"
        android:text="Compare Drivers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsearch_driver" />

    <Button
        android:id="@+id/btnsearch_driver"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_racer"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:shadowColor="@color/black"
        android:text="Search driver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsearch_circuits" />

    <Button
        android:id="@+id/btnsearch_circuits"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Search circuits"
        android:drawableLeft="@drawable/ic_podium"
        android:drawableRight="@drawable/ic_right_arrow_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnlist" />

</androidx.constraintlayout.widget.ConstraintLayout>